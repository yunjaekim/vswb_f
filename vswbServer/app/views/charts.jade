doctype html
html
  head
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='stylesheets/home.css', rel='stylesheet')
    link(href='stylesheets/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
  body
    #wrapper
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          a.navbar-brand(href='dashboard') VSWB
        ul.nav.navbar-right.top-nav
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              i.fa.fa-user
              label #{user.user.username}
              b.caret
            ul.dropdown-menu
              li
                a(href='#')
                  i.fa.fa-fw.fa-user
                  |  Profile
              li
                a(href='#')
                  i.fa.fa-fw.fa-envelope
                  |  Inbox
              li
                a(href='#')
                  i.fa.fa-fw.fa-gear
                  |  Settings
              li.divider
              li
                a(href='#')
                  i.fa.fa-fw.fa-power-off
                  |  Log Out
        .collapse.navbar-collapse.navbar-ex1-collapse
          ul.nav.navbar-nav.side-nav
            li.active
              a(href='dashboard')
                i.fa.fa-fw.fa-dashboard
                |  Dashboard
            li
              a(href='charts')
                i.fa.fa-fw.fa-bar-chart-o
                |  Charts
            li
              a(href='javascript:;', data-toggle='collapse', data-target='#demo')
                i.fa.fa-fw.fa-arrows-v
                | 							APIs
                i.fa.fa-fw.fa-caret-down
              ul#demo.collapse
                li
                  a(href='#') /api/rt/total
                li
                  a(href='#') /api/rt/inner
                li
                  a(href='#') /api/st/locallist
      
      
    script(src='javascripts/jquery.js')
    script(src='javascripts/bootstrap.min.js')
